<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:gravity="center_vertical">

		<ImageView
			android:layout_width="48dp"
			android:layout_height="48dp"
			android:src="@drawable/dots_vertical"
			android:padding="10dp"
			android:layout_alignParentRight="true"
			android:layout_marginRight="5dp"
			android:id="@+id/activitymainImageView1"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Stack"
			android:textSize="20sp"
			android:layout_toLeftOf="@id/activitymainImageView1"
			android:layout_alignParentBottom="true"
			android:layout_alignParentTop="true"
			android:layout_alignParentLeft="true"
			android:gravity="center"/>

	</RelativeLayout>

	<View
		android:background="?android:attr/dividerVertical"
		android:layout_width="match_parent"
		android:layout_height="2dp"/>

	<androidx.cardview.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:cardCornerRadius="13dp"
		app:cardElevation="4dp"
		android:id="@+id/activitymainCardView1"
		android:layout_marginRight="7dp"
		android:layout_marginLeft="7dp"
		android:layout_marginTop="7dp">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="150dp"
			android:padding="10dp">

			<ImageView
				android:id="@+id/simpleImageView"
				android:layout_width="150dp"
				android:layout_height="match_parent"
				android:src="@drawable/minecraft_download_icon"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Obtener Versiones"
				android:textSize="20sp"
				android:layout_toRightOf="@id/simpleImageView"
				android:layout_alignParentRight="true"
				android:id="@+id/activitymainTextView1"
				android:layout_marginBottom="3dp"/>

			<LinearLayout
				android:orientation="vertical"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/activitymainTextView1"
				android:layout_toRightOf="@id/simpleImageView"
				android:layout_alignParentRight="true"
				android:layout_alignParentBottom="true">

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="• 1.1.0"
						android:layout_weight="1.0"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="• 1.16.0"
						android:layout_weight="1.0"/>

				</LinearLayout>

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="• 1.2.0"
						android:layout_weight="1.0"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="• 1.17.0"
						android:layout_weight="1.0"/>

				</LinearLayout>

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="• 1.3.0"
						android:layout_weight="1.0"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="• 1.18.0"
						android:layout_weight="1.0"/>

				</LinearLayout>

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="• 1.4.0"
						android:layout_weight="1.0"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="• 1.19.0"
						android:layout_weight="1.0"/>

				</LinearLayout>

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="..."
						android:layout_weight="1.0"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="..."
						android:layout_weight="1.0"/>

				</LinearLayout>

			</LinearLayout>

		</RelativeLayout>

	</androidx.cardview.widget.CardView>

	<androidx.cardview.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:cardCornerRadius="13dp"
		app:cardElevation="4dp"
		android:id="@+id/activitymainCardView2"
		android:layout_marginTop="7dp"
		android:layout_marginLeft="7dp"
		android:layout_marginRight="7dp">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="150dp"
			android:padding="10dp">

			<ImageView
				android:id="@+id/simpleImageView"
				android:layout_width="150dp"
				android:layout_height="match_parent"
				android:src="@drawable/minecraft_download_icon"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Mis versiones"
				android:textSize="20sp"
				android:layout_toRightOf="@id/simpleImageView"
				android:layout_alignParentRight="true"
				android:id="@+id/activitymainTextView1"
				android:layout_marginBottom="3dp"/>

			<LinearLayout
				android:orientation="vertical"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/activitymainTextView1"
				android:layout_toRightOf="@id/simpleImageView"
				android:layout_alignParentRight="true"
				android:layout_alignParentBottom="true">

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="Aquí estarán las versiones que hayas descargado"
					android:layout_marginTop="10dp"/>

			</LinearLayout>

		</RelativeLayout>

	</androidx.cardview.widget.CardView>

</LinearLayout>

